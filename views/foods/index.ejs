<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar') %>
  <h1>Welcome <%= user.username %></h1>
  <h3>Welcome to your Pantry</h3>
  <ul>
    <% foods.forEach(food => { %>
      <li>
        <a href="/users/<%= user._id %>/foods/<%= food._id %>">
          <%= food.name %>
        </a>
        <form action="/users/<%= user._id %>/foods/<%= food._id %>/edit">
          <button type="submit">Edit</button>
        </form>
        <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
  
</body>
</html>